<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.2.xsd">

<bean id="auditorium" class="springIdol.Auditorium"
	init-method="turnOnLights" destroy-method="turnOffLights" />

<bean id="theStage" class="springIdol.Stage" factory-method="getInstance"/>

<bean id="ticket" class="springIdol.Ticket" scope="prototype" />

<bean id="duke" class="springIdol.Juggler" />

<bean id="poeticMax" class="springIdol.PoeticJuggler">
	<constructor-arg value="15"/>
	<constructor-arg ref="sonnet29" />
</bean>

<bean id="kenny" class="springIdol.Instrumentalist" 
	p:song="Jingle Bells" p:instrument-ref="piano" />
	
<!-- List allows replays -->
<bean id="hank" class="springIdol.OneManBand">
	<property name="instruments">
		<set>
			<ref bean="guitar"/>
			<ref bean="saxophone"/>
			<ref bean="piano"/>
			<ref bean="guitar"/>
		</set>
	</property>
</bean>	

<bean id="jim" class="springIdol.OneManBandMap">
	<property name="instruments">
		<map>
		<entry key="GUITAR" value-ref="guitar"/>
		<entry key="SAXOPHONE" value-ref="saxophone"/>
		<entry key="PIANO" value-ref="piano"/>
		</map>
	</property>
</bean>	
	
<bean id="guitar" class="springIdol.Guitar"/>	
	
<bean id="saxophone" class="springIdol.Saxophone" />

<bean id="piano" class="springIdol.Piano" />

<bean id="sonnet29" class="springIdol.Sonnet29"/>

</beans>
